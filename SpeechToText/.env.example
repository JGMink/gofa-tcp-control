# Azure Speech-to-Text Configuration (Required for all variants)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_region_here  # e.g., eastus

# Azure CLU Configuration (Optional - only needed if USE_CLU=true in SpeechToText.py)
CLU_ENDPOINT=your_clu_endpoint_here
CLU_KEY=your_clu_key_here
CLU_PROJECT=GofaVoiceBot
CLU_DEPLOYMENT=production
USE_CLU=false  # Set to 'true' to enable CLU

# Anthropic Claude API (Required for SpeechToText_learning.py)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-haiku-20241022  # Fast and cost-effective model

# Learning System Configuration (Optional - defaults shown)
FUZZY_MATCH_THRESHOLD=0.85  # 0.0-1.0, higher = more strict
LLM_CONFIDENCE_THRESHOLD=0.90  # Only learn phrases if LLM is this confident

# Instructions:
# 1. Copy this file to .env
# 2. Fill in your actual API keys and endpoints
# 3. Never commit .env to git (it's in .gitignore)
